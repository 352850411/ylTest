<div id="admin-container"class="admin-container" data-type="orders">
	<table class="table">
		<tbody>
			<tr class="warning">
				<td colspan="4">订单信息</td>
			</tr>
			<tr>
				<td class="order_label">订单号</td>
				<td><span class="order_numb"><%= @order.id%></span></td>
				<td class="order_label">订单总价</td>
				<td><span class="rmb">￥<%= @order.total_fee%></span></td>
			</tr>
			<tr>
				<td class="order_label">下单时间</td>
				<td><span><%= (@order.created_at.strftime('%Y-%m-%d %H:%M:%S') if @order.created_at.present?)%></span></td>
				<td colspan="2"></td>
			</tr>
			<tr class="warning">
				<td colspan="4">商品信息</td>
			</tr>
			<tr>
				<td class="order_label">商品名称</td>
				<td><%= @order.subject%></td>
				<td colspan="2"></td>
			</tr>
			<tr>
				<td class="order_label">商品单价</td>
				<td>￥<%= @order.price%></td>
				<td colspan="2"></td>
			</tr>
			<tr>
				<td class="order_label">商品数量</td>
				<td><%= @order.quantity%></td>
				<td colspan="2"></td>
			</tr>

			<tr class="warning">
				<td colspan="4">支付信息</td>
			</tr>
			<tr>
				<td class="order_label">交易号</td>
				<td><%= @order.trade_no%></td>
				<td class="order_label">支付状态</td>
				<td><%= @order.show_status%></td>
			</tr>
			<tr>
				<td class="order_label">同步状态</td>
				<td><%= @order.trade_status_sync%></td>
				<td class="order_label">异步状态</td>
				<td><%= @order.trade_status_async%></td>
			</tr>

			<tr class="warning">
				<td colspan="4">用户信息</td>
			</tr>
			<tr>
				<td class="order_label">姓名</td>
				<td><%= (@order.user.full_name if @order.user.present?)%></td>
				<td class="order_label">手机号</td>
				<td><%= (@order.user.phone if @order.user.present?)%></td>
			</tr>
		</tbody>
	</table>
	<div class="pull-right" style="margin-top: 20px;">
		<%if @order.status == 0%>
		<a href=<%= admin_order_path(@order)%> class="btn btn_cancel" data-confirm="确定删除订单？" style="color: #000" data-method="delete" rel="nofollow">删除</a>
		<%end%>
	</div>
</div>
